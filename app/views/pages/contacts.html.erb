
<%=@page.content%>
<div style="padding-top:70px">
<% if flash[:notice] %>
  <h3><%=flash[:notice]%></h3>
<% else %>
  <% form_tag('/send_message') do %>

  <dl>
    <dt>Ваше сообщение:</dt>
    <dd><%= text_area_tag 'message', nil, :size =>"40x4" %></dd>
    <dt>Контактное лицо:</dt>
    <dd><%= text_field_tag 'name', (current_user ? current_user.name : "") %></dd>
    <dt>email:</dt>
    <dd><%= text_field_tag 'email', (current_user ? current_user.email : "") %></dd>
  </dl>


  <p>
  <%= submit_tag 'Отправить' %>
  </p>
  <% end %>
<% end %>
</div>
