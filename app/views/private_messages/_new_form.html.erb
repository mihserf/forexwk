<div id="private-message" class="editbox">
<div class="container">
  <%= content_tag 'p', h(flash[:bad_reply]), :class => 'notice' if flash[:bad_reply] %>
  <% form_for :private_message, :url => private_messages_path do |f| -%>
  <%= f.hidden_field :recipient_id %>
  <table width="100%" border="0" cellpadding="0" cellspacing="0">
  	<tr>
      <td width="70%">
        <%= f.text_field :title, :class => 'primary' %>
      </td>
    </tr>
    <tr>
      <td rowspan="2" width="70%">
        <%= f.text_area :body, :rows => 8, :cols => 34 %>
      </td>
      <td valign="top">


        <h5 class='help_title'><%= 'Форматирование текста' %></h5>

        <ul class="help">
          <li><%= '*жирным*' %>
          &nbsp;
          <%= '_курсивом_' %>
          &nbsp;<br />
          <%= 'bq. <span>(кавычки)</span>' %></li>
          <li>"ссылка":http://forexwk.com</li>
          <li><%= '* или # <span>(список)</span>' %></li>
        </ul>

      </td>
    </tr>
    <tr>
      <td valign="bottom" style="padding-bottom:15px; font-size:10px;">
       <%= submit_tag "Отправить"[] %><span class="button_or">или <%= link_to_function 'отменить', "$('private-message').hide()" %></span>
     </td>
   </tr>
  </table>
  <% end -%>
</div>
</div>
<%= javascript_tag "$('#private-message').hide();"%>
<%= javascript_tag(render(:partial => 'private_messages/user_script')) %>
