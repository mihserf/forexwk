<h1><%= 'Edit Post'[:edit_title] %></h1>

<h2><%= link_to h(@post.topic.title), forum_topic_path(@post.forum_id, @post.topic) %></h2>

<%= link_to('Delete post'[], forum_topic_post_path(@post.forum_id, @post.topic, @post, :page => params[:page]),
      :class => "utility", :method => :delete, :confirm => 'Delete this post forever?'[:delete_post_conf]) %>

<%= error_messages_for :topic %>
<% form_for :post, :html => { :method => :put }, 
     :url  => forum_topic_post_path(params[:forum_id], params[:topic_id], @post, :page => params[:page]) do |f| -%>
<p id="post_body"><%= f.text_area :body %></p>

<%= submit_tag 'Save'[:save_title] %> или <%= link_to 'cancel'[], forum_topic_path(:forum_id => params[:forum_id], :topic_id => params[:topic_id], :page => params[:page]) %>
<% end -%>