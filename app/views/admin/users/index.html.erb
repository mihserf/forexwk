
<table>
<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user_path(user) %></td> <td><%= user.login %></td>
    <td><%= link_to image_tag("/images/edit_ico.gif",:alt=>"Редактировать"), edit_user_path(user) %></td>
    <td><%= link_to image_tag("/images/delete_ico.gif",:alt=>"Удалить"), admin_user_path(user), :method => :delete, :confirm => 'подтвердите удаление'%></td>
  </tr>
<% end %>
</table>
