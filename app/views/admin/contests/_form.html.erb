
<%= error_messages_for :contest %>
<%form_for [:admin,@contest], :html => { :multipart => true } do |f|%>

<p>
<%= f.label 'Название' %><br />
<%=f.text_field :name%>
</p>

<p>
<%= f.label 'Призовой фонд' %><br />
<%=f.text_field :prize%>
</p>

<p>
<%= f.label 'Дата начала' %><br />
<%=f.date_select :date_start, :use_month_numbers => true %>
</p>

<p>
<%= f.label 'Дата окончания' %><br />
<%=f.date_select :date_end, :use_month_numbers => true %>
</p>



<p>
<%= f.label 'Описание' %><br />
<%=f.text_area :description, :size=>"70x6"%>
</p>

  
<%=f.submit 'Сохранить изменения' %>
</p>
<%end%>