<%= javascript_include_tag :fckeditor %>

<%= error_messages_for :contest %>
<%form_for [:admin,@contest], :html => { :multipart => true } do |f|%>

<p>
<%= f.label 'Название' %><br />
<%=f.text_field :name%>
</p>

<p>
<%= f.label 'Призовой фонд' %><br />
<%=f.text_field :prize%>
</p>

<p>
<%= f.label 'Дата начала' %><br />
<%=f.date_select :date_start, :use_month_numbers => true %>
</p>

<p>
<%= f.label 'Дата окончания' %><br />
<%=f.date_select :date_end, :use_month_numbers => true %>
</p>

<p>
<%= f.label 'Дата подведения итогов' %><br />
<%=f.date_select :date_total, :use_month_numbers => true %>
</p>



<p>
<%= f.label 'Условия конкурса' %><br />
<%= fckeditor_textarea(:contest, :description, :toolbarSet => 'Simple', :width => '98%', :height => '300px') %>
</p>

<p>
<%= f.label 'Правила участия' %><br />
<%= fckeditor_textarea(:contest, :rules, :toolbarSet => 'Simple', :width => '98%', :height => '300px') %>
</p>

<%= render :partial => "shared/seo_fields", :locals => {:f => f} %>


  
<%=f.submit 'Сохранить изменения' %>
</p>
<%end%>