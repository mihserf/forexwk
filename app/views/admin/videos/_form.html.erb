
<%= error_messages_for :videos %>
<%form_for [:admin,@video], :html => { :multipart => true } do |f|%>

<p>
<%= f.label 'Название' %><br />
<%=f.text_field :name%>
</p>

<p>
<%= f.label 'Описание' %><br />
<%=f.text_area :description, :size=>"70x6"%>
</p>

<p>
<%= f.label :video, "Видео-файл " %><%= f.file_field :video %>
</p>

<% unless @video.new_record? && @video.screenshot.nil? %>
  <%= image_tag @video.screenshot.url(:thumb)  %>
<% end %>
<p>
<%= f.label :screenshot, "Скриншот " %><%= f.file_field :screenshot %>
</p>

<%= render :partial => "shared/seo_fields", :locals => {:f => f} %>


<p>
<%=f.submit 'Сохранить изменения' %>
</p>
<%end%>