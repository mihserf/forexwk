<div class="trend">
  <div class='currency_title'><%= currency_pair.title %></div>
  <div class="last_update">
     <%= "<p>"+trend_data.created_at.to_date.to_s+"</p>" if show_date %>
    <p><%= "<nobr>стоимость "+currency_data.currency_price.to_s+"</nobr>" unless currency_pair.denied %></p>
  </div>

  <% if currency_pair.denied %>
    <span class="trend_message"><%= currency_pair.message %></span>
  <% else %>
  <div class="trend_table">
    <table>
      <tr>
        <th>период</th>
        <th>напр-е тренда</th>
        <th>стадия тренда</th>
      </tr>
      <% trends.each do |trend| %>
      <tr>
        <td><%= Trend::TYPES[trend.trend_type] %></td>
        <td><%= image_tag "/images/"+Trend::CHARACTERS[trend.character]+".png", :alt => Trend::TYPES[trend.character] %></td>
        <td><%= Trend::STAGES[trend.stage] %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <% end %>
</div>