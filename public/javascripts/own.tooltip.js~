 $(document).ready(function(){
   make_tooltip();
 });

 
function make_tooltip(){
	$('.short_info').tooltip({
		 track: true,
		 delay: 0,
		 showURL: false,
		 bodyHandler: function() {
		 		/*data = $.get('/users/1/short_info',{value:1},
				  function(data){
				      return data
				  });*/
				//alert($(this).attr("rel"));
				return $("#"+$(this).attr("rel")).html();
	 		}
	 });
}